<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Frank+Ruhl+Libre&family=Lato&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" type="text/css" href="../slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="../slick/slick-theme.css" />

    <link rel="stylesheet" href="../styles/bootstrap.css" />
    <!-- <link rel="stylesheet" href="../styles/bootstrap-grid.css" /> -->
    <link rel="stylesheet" href="../styles/mainlanding.css" />
    <link rel="stylesheet" href="../styles/index.css" />

    <script src="../scripts/popper.min.js"></script>
    <script src="../scripts/bootstrap.js"></script>

    <script
      type="text/javascript"
      src="//code.jquery.com/jquery-1.11.0.min.js"
      defer
    ></script>
    <script
      type="text/javascript"
      src="//code.jquery.com/jquery-migrate-1.2.1.min.js"
      defer
    ></script>
    <script type="text/javascript" src="../slick/slick.min.js" defer></script>

    <script
      type="text/javascript"
      src="../scripts/product-card.js"
      defer
    ></script>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <title>Krip Store</title>
  </head>

  <body>
    <%- include('partials/header', {user}); %>

    <main>
      <div class="container">
        <div class="row row-cols-md-2 row-cols-lg-3 row-cols-xxl-4">
          <% if(produtos.length===0) { %>
          <h2 class="text-center" style="margin: auto; padding: 40px">
            Your cart is empty
          </h2>
          <% } else { %> <% produtos.forEach(produto=> { %>
          <div class="mb-5">
            <%- include('partials/product-card', {produto}) %>
          </div>
          <% }) %> <% } %>
        </div>
      </div>
    </main>

    <%- include('partials/footer', {}); %>
  </body>
</html>
