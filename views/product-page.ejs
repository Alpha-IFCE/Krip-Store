<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Frank+Ruhl+Libre&family=Lato&display=swap" rel="stylesheet" />

    <link rel="stylesheet" type="text/css" href="../slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="../slick/slick-theme.css" />

    <link rel="stylesheet" href="../styles/bootstrap.css" />
    <!-- <link rel="stylesheet" href="../styles/bootstrap-grid.css" /> -->
    <link rel="stylesheet" href="../styles/mainlanding.css" />
    <link rel="stylesheet" href="../styles/product-page.css" />

    <script src="../scripts/popper.min.js"></script>
    <script src="../scripts/bootstrap.js" defer></script>

    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js" defer></script>
    <script type="text/javascript" src="//code.jquery.com/jquery-migrate-1.2.1.min.js" defer></script>
    <script type="text/javascript" src="../slick/slick.min.js" defer></script>

    <script type="text/javascript" src="../scripts/index.js" defer></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />

    <title>Krip Store</title>
</head>

<body>
    <%- include('partials/header', {user}) %>
        <main>
            <div class="container">
                <div class="content row rounded">
                    <div class="product-image-wrapper col-5">
                        <img src="<%= produto.imageUrl %>" alt="" class="w-100 rounded" />
                    </div>
                    <div class="col-7">
                        <h2 class="font-lato h6 fw-bold text-secondary text-uppercase my-3">
                            Krip Store
                        </h2>
                        <h2 class="font-lato text-left mb-4">
                            <%= produto.name %>
                        </h2>
                        <p class="font-lato mb-4">
                            <%= produto.description %>
                        </p>
                        <div class="mb-4">
                            <% if(produto.promotion) { %>
                                <span class="text-decoration-line-through text-muted">
                                    <%= produto.price %>
                                </span>
                                <span class="font-lato fw-bold text-dark mx-3">
                                    <%= produto.promotion %>
                                </span>
                                <span class="badge bg-danger">
                                    <%= Math.trunc(100 - ((produto.promotion.slice(2) / produto.price.slice(2)) * 100))
                                        %>% OFF
                                </span>
                                <% } else { %>
                                    <span class="font-lato fw-bold text-dark">
                                        <%= produto.price %>
                                    </span>
                                    <% } %>
                        </div>

                        <div class="amount-wrapper input-group mb-4 rounded">
                            <button id="sub-btn" class="btn btn-dark" type="button">-</button>
                            <input type="number" name="produto-amount" id="produto-amount"
                                class="form-control text-center border-dark text-dark fw-normal" value="0" min="0">
                            <button id="plus-btn" class="btn btn-dark rounded-end" type="button">+</button>

                            <script>
                                const input = document.querySelector('input[type=number]')
                                document.querySelector('#plus-btn').addEventListener('click', () => {
                                    input.value = parseInt(input.value) + 1
                                })
                                document.querySelector('#sub-btn').addEventListener('click', () => {
                                    parseInt(input.value) !== 0 && input.value--
                                })
                            </script>
                        </div>

                        <div class="calcular-frete input-group mb-4 rounded">
                            <input type="number" name="cep" id="cep-input"
                                class="form-control border-dark text-dark text-dark rounded-start"
                                placeholder="Calcular Frete (CEP)" aria-label="CEP" maxlength="8">
                            <button class="btn btn-dark rounded-end" type="button"
                                id="calcular-frete-btn">Calcular</button>
                            <script src="../scripts/calcular-frete.js"></script>
                        </div>

                        <div class="valor-frete mb-4 d-none">
                            <span>Valor do Frete: <span></span> </span>
                        </div>

                        <div class="">
                            <a class="btn btn-dark text-uppercase">Comprar</a>
                            <a class="btn btn-secondary text-capitalize ">
                                <span>Adicionar ao carrinho</span>
                                <i class="bi bi-cart"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>
</body>

</html>